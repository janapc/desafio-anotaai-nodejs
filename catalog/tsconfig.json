{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "src",
      "resolveJsonModule": true,
      "paths": {
        "@entities/*": ["entities/*"],
        "@infra/*": ["infra/*"],
        "@usecases/*": ["usecases/*"]
      }
    },
    "include": [
      "src/**/*.ts"
    ],
  }